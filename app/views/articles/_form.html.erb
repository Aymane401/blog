<%= form_with model: article, local: true, url: articles_path do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

 <%= form.fields_for :mon_image do |mon_image_fields| %>
  <div>
    <%= mon_image_fields.label :image %><br>
    <%= mon_image_fields.file_field :image, accept: [:jpg, :png, :jpeg] %>
     <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
<% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>